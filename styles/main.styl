bgcolor      = #282828
successcolor = #57FF62
fonts        = "Inconsolata-dz", Inconsolata, Consolas, "Courier New", Courier, monospace

@font-face
    font-family: "Inconsolata-dz";
    src: url('../fonts/inconsolata-dz-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/inconsolata-dz-webfont.woff') format('woff'),
         url('../fonts/inconsolata-dz-webfont.ttf')  format('truetype'),
         url('../fonts/inconsolata-dz-webfont.svg#inconsolata-dzdz') format('svg');

body
    background: bgcolor
    font-family: fonts
    font-size: 17px
    color: #FFF

h1
    font-size: 36pt
    text-align: center

div#input
    width: 900px
    margin: auto

input.input-text
    background: bgcolor
    border: 1px solid white
    color: #FFF
    font-family: fonts
    font-size: 16pt
    width: 900px

input.input-button
    background: bgcolor
    border: 1px solid #FFF
    color: #FFF
    font-family: fonts
    width:250px
    font-size: 16pt
    font-weight: bold

    &:hover
        color: successcolor
        border-color: @color
    &:active
        color: successcolor - 25%
        border-color: @color

div#buttons
    text-align:center

input#button-step-fw
    visibility: hidden

div#output-message
    background-color: #572222
    border: 1px solid (@background-color + 25%)
    padding: 5px
    margin-bottom: 20px
    visibility: hidden

div#output
    width:900px
    margin: auto

div#output-target
div#output-cursor
div#output-pattern
    font-size: 24pt
    width:900px

div#output-cursor
    margin-top: -13px
    margin-left: -10px
    margin-bottom: 30px

div#output-pattern
div#output-target
    .match
        color: successcolor
    .nomatch
        color: #572222 + 25%
